#!/bin/sh

INSTALL_DIR="${SYNOPKG_PKGDEST}"
PATH="/usr/local/bin:/bin:/usr/bin:/usr/syno/bin"
# optional - change user/group to run HorEPG in daemonized mode (default). Differs between Tvheadend package distributions. Using the same user as Tvheadend allows access to xmltv.sock/xml output.
USER="sc-tvheadend"
# the most current Tvheadend package (from SynoCommunity) adds a common "sc-media" group used by more packages. That group would give HorEPG more permissions than it needs.
GROUP="tvheadend"
# set these to the correct values if you use ACL in TVH
TVHUSER=""
TVHPASSWORD=""
HOREPGD="${INSTALL_DIR}/horepgd.py"
PID_FILE="${INSTALL_DIR}/horepgd.pid"
# hope you use tvheadend-testing
XMLTVSOCKET="/usr/local/tvheadend/var/epggrab/xmltv.sock"

start_daemon ()
{
    python3 ${HOREPGD} -d -p ${PID_FILE} -u ${USER} -g ${GROUP} -s ${XMLTVSOCKET} -tvh_username ${TVHUSER} -tvh_password ${TVHPASSWORD}
}

stop_daemon ()
{
    kill `cat ${PID_FILE}`
    wait_for_status 1 20
    rm -f ${PID_FILE}
}

daemon_status ()
{
    if [ -f ${PID_FILE} ] && [ -d /proc/`cat ${PID_FILE}` ]; then
        return
    fi
    return 1
}

wait_for_status ()
{
    counter=$2
    while [ ${counter} -gt 0 ]; do
        daemon_status
        [ $? -eq $1 ] && break
        let counter=counter-1
        sleep 1
    done
}


case $1 in
    start)
        if daemon_status; then
            echo ${SYNOPKG_PKGNAME} is already running
            exit 0
        else
            echo Starting ${SYNOPKG_PKGNAME} ...
            start_daemon
            exit $?
        fi
        ;;
    stop)
        if daemon_status; then
            echo Stopping ${SYNOPKG_PKGNAME} ...
            stop_daemon
            exit $?
        else
            echo ${SYNOPKG_PKGNAME} is not running
            exit 0
        fi
        ;;
    restart)
        stop_daemon
        start_daemon
        exit $?
        ;;
    status)
        if daemon_status; then
            echo ${SYNOPKG_PKGNAME} is running
            exit 0
        else
            echo ${SYNOPKG_PKGNAME} is not running
            exit 1
        fi
        ;;
    *)
        exit 1
        ;;
esac
